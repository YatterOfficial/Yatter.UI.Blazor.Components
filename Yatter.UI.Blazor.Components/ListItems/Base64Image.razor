@using ListBuilder = Yatter.UI.ListBuilder.ListItems;

<div style="visibility:@CastItem?.Visibility;margin:@CastItem?.Margin;padding:@CastItem?.Padding;">
    <img style="object-fit:contain;" src="data:image/@CastItem?.ImageType;base64,@CastItem?.Base64" alt="@CastItem?.AltText" />
</div>

@code {

    private object _item;
    [Parameter]
    public object? Item
    {
        get { return _item; }
        set { _item = value; if (_item != null) { CastItem = (Yatter.UI.ListBuilder.ListItems.Base64Image)_item; } }
    }

    public Yatter.UI.ListBuilder.ListItems.Base64Image? CastItem { get; set; }
}
